{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es2019"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "types": ["react", "react-native"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "src/utils/performanceUtils.ts", "src/utils/componentUtils.ts"]
}